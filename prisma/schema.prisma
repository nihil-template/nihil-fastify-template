// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 사용자 권한 enum
enum UserRole {
  ADMIN
  USER
}

// Y/N 상태 enum
enum YnStatus {
  Y
  N
}

// 사용자 기본 정보 테이블
model UserInfo {
  userNo        Int      @id @default(autoincrement()) @map("user_no")
  emlAddr       String   @unique @map("eml_addr")
  userNm        String   @unique @map("user_nm")
  userRole      UserRole @default(USER) @map("user_role")
  proflImg      String?  @map("profl_img")
  userBiogp     String?  @map("user_biogp")
  encptPswd     String   @map("encpt_pswd")
  reshToken     String?  @map("resh_token")
  useYn         YnStatus @default(Y) @map("use_yn")
  delYn         YnStatus @default(N) @map("del_yn")
  lastLgnDt     String?  @default(dbgenerated("to_char(current_timestamp AT TIME ZONE 'UTC', 'YYYY-MM-DD\"T\"HH24:MI:SS\"Z\"')")) @map("last_lgn_dt")
  lastPswdChgDt String?  @default(dbgenerated("to_char(current_timestamp AT TIME ZONE 'UTC', 'YYYY-MM-DD\"T\"HH24:MI:SS\"Z\"')")) @map("last_pswd_chg_dt")
  crtNo         Int?     @map("crt_no")
  crtDt         String   @default(dbgenerated("to_char(current_timestamp AT TIME ZONE 'UTC', 'YYYY-MM-DD\"T\"HH24:MI:SS\"Z\"')")) @map("crt_dt")
  updtNo        Int?     @map("updt_no")
  updtDt        String   @default(dbgenerated("to_char(current_timestamp AT TIME ZONE 'UTC', 'YYYY-MM-DD\"T\"HH24:MI:SS\"Z\"')")) @map("updt_dt")
  delNo         Int?     @map("del_no")
  delDt         String?  @map("del_dt")

  @@map("user_info")
}
